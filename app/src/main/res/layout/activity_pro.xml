<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fab_margin"
    android:background="@drawable/back"
    android:tileMode="disabled">

    <TextView
        android:text="sample@abc.com"
        android:id="@+id/textviewUserEmail"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button5"
        android:backgroundTint="@color/colorDivider"
        android:background="@drawable/bottom_border"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:onClick="browse"
        android:drawableRight="@drawable/ic_menu_gallery"
        android:text="gallery"
        android:layout_above="@+id/name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/proView"
        android:background="@drawable/picture"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/textviewUserEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    
    <Button
        android:text="upload details"
        android:onClick="upload"
        android:id="@+id/UPLOAD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_border"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawableRight="@mipmap/ic_file_upload_white_24dp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/bottom_border"
        android:singleLine="true"
        android:inputType="textPersonName"
        android:layout_below="@+id/proView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/bottom_border"
        android:singleLine="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tel No"
        android:inputType="number"
        android:maxLines="1"
        android:maxLength="10"
        android:padding="15dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/bottom_border"
        android:singleLine="true"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/address"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button2"
        android:backgroundTint="@color/colorDivider"
        android:background="@drawable/bottom_border"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_menu_camera"
        android:text="Camera"
        android:onClick="camera"
        android:layout_above="@+id/button5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp" />

</RelativeLayout>